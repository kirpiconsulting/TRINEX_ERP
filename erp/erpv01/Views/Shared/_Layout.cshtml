<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trinex ERP</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="https://uicdn.toast.com/grid/latest/tui-grid.css" />
    <link rel="stylesheet" href="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.css" />
    <link rel="stylesheet" href="https://uicdn.toast.com/tui.pagination/latest/tui-pagination.css" />
    <link rel="stylesheet" href="https://uicdn.toast.com/editor/latest/toastui-editor.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/erp_bilesenleri.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-custom">
        <div class="d-flex align-items-center">
            <button class="btn btn-light border-0 me-3" id="sidebarToggle" style="color: #555;">
                <i class="fa-solid fa-bars fa-lg"></i>
            </button>

            <a class="navbar-brand-group" href="/">
                <img src="~/images/logo.png" onerror="this.style.display='none'" alt="Logo" class="navbar-logo">
                <span class="brand-badge">TRINEX ERP</span>
            </a>
        </div>

        <div class="ms-auto">
            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-dark d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="d-none d-sm-block text-end" style="line-height: 1.2;">
                        <small class="text-muted d-block" style="font-size: 0.7rem; font-weight:600;">HOŞGELDİNİZ</small>
                        <span style="font-weight: 600; font-size: 0.9rem;">Furkan Kaya</span>
                    </div>
                    <div style="background: #e7f1ff; padding: 8px; border-radius: 50%; color: #0d6efd;">
                        <i class="fa-solid fa-user"></i>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-2">
                    <li><a class="dropdown-item" href="#"><i class="fa-regular fa-id-card me-2"></i> Profilim</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fa-solid fa-sliders me-2"></i> Ayarlar</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="#"><i class="fa-solid fa-right-from-bracket me-2"></i> Çıkış Yap</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-search-wrapper">
                <input type="text" id="menuSearchInput" class="sidebar-search-input" placeholder="Menüde ara...">
            </div>

            <ul class="sidebar-nav">

                <li>
                    <a asp-controller="Home" asp-action="Index" target="_blank" title="Anasayfa">
                        <div class="link-content">
                            <i class="fa-solid fa-gauge-high level-1-icon"></i>
                            <span class="link-text">Anasayfa</span>
                        </div>
                    </a>
                </li>

                <li>
                    <a href="#" class="has-submenu" title="Sistem Yönetimi">
                        <div class="link-content">
                            <i class="fa-solid fa-gears level-1-icon"></i>
                            <span class="link-text">Sistem</span>
                        </div>
                        <i class="fa-solid fa-chevron-right arrow-icon"></i>
                    </a>
                    <ul>
                        <li>
                            <a href="#" class="has-submenu" title="Özelleştirme Tanımları">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Özelleştirme Tanımları</span>
                                </div>
                                <i class="fa-solid fa-chevron-right arrow-icon"></i>
                            </a>
                            <ul>
                                <li>
                                    <a asp-controller="System" asp-action="TableNames" target="_blank" title="Tablo Alan İsimlendirmeleri">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Tablo Alan İsimlendirmeleri</span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="System" asp-action="MenuDesign" target="_blank" title="Menü Tasarımı">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Menü Tasarımı</span>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li>
                            <a href="#" class="has-submenu" title="Sabit Tanımlamalar">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Sabit Tanımlamalar</span>
                                </div>
                                <i class="fa-solid fa-chevron-right arrow-icon"></i>
                            </a>
                            <ul>
                                <li>
                                    <a asp-controller="System" asp-action="DataSets" target="_blank" title="Veri Setleri">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Veri Setleri</span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="System" asp-action="CompanyInfo" target="_blank" title="Firma Bilgileri">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Firma Bilgileri</span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="System" asp-action="Warehouses" target="_blank" title="Depo Tanımları">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Depo Tanımları</span>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li>
                            <a href="#" class="has-submenu" title="Kullanıcılar">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Kullanıcılar</span>
                                </div>
                                <i class="fa-solid fa-chevron-right arrow-icon"></i>
                            </a>
                            <ul>
                                <li>
                                    <a asp-controller="User" asp-action="List" target="_blank" title="Kullanıcı Listesi">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Kullanıcı Listesi</span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="User" asp-action="Groups" target="_blank" title="Kullanıcı Grupları Listesi">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Kullanıcı Grupları Listesi</span>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#" class="has-submenu" title="Stok Yönetimi">
                        <div class="link-content">
                            <i class="fa-solid fa-boxes-stacked level-1-icon"></i>
                            <span class="link-text">Stok</span>
                        </div>
                        <i class="fa-solid fa-chevron-right arrow-icon"></i>
                    </a>
                    <ul>
                        <li>
                            <a asp-controller="Stock" asp-action="Cards" target="_blank" title="Stok Kartları Listesi">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Stok Kartları Listesi</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Stock" asp-action="Reports" target="_blank" title="Raporlar">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Raporlar</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#" class="has-submenu" title="Satış Yönetimi">
                        <div class="link-content">
                            <i class="fa-solid fa-basket-shopping level-1-icon"></i>
                            <span class="link-text">Satış</span>
                        </div>
                        <i class="fa-solid fa-chevron-right arrow-icon"></i>
                    </a>
                    <ul>
                        <li>
                            <a asp-controller="Satis" asp-action="Liste1" target="_blank" title="Satış Siparişleri Listesi">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Satış Siparişleri Listesi</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Satis" asp-action="Liste2" target="_blank" title="Satış Siparişleri Kalemleri Listesi">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Satış Siparişleri Kalemleri Listesi</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Sales" asp-action="Customers" target="_blank" title="Satıcı Listesi">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Satıcı Listesi</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#" class="has-submenu" title="Satınalma Yönetimi">
                        <div class="link-content">
                            <i class="fa-solid fa-truck-ramp-box level-1-icon"></i>
                            <span class="link-text">Satınalma</span>
                        </div>
                        <i class="fa-solid fa-chevron-right arrow-icon"></i>
                    </a>
                    <ul>
                        <li>
                            <a asp-controller="Purchasing" asp-action="Orders" target="_blank" title="Satınalma Siparişleri Listesi">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Satınalma Siparişleri Listesi</span>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Purchasing" asp-action="OrderItems" target="_blank" title="Satınalma Siparişleri Kalemleri Listesi">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Satınalma Siparişleri Kalemleri Listesi</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </li>


                <li>
                    <a href="#" class="has-submenu" title="Üretim Yönetimi">
                        <div class="link-content">
                            <i class="fa-solid fa-industry level-1-icon"></i>
                            <span class="link-text">Üretim</span>
                        </div>
                        <i class="fa-solid fa-chevron-right arrow-icon"></i>
                    </a>

                    <ul>
                        <li>
                            <a asp-controller="Uretim" asp-action="Liste1" target="_blank" title="İş Emirleri Listesi">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">İş Emirleri Listesi</span>
                                </div>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="has-submenu" title="Üretim Bildirme Ekranları">
                                <div class="link-content">
                                    <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                    <span class="link-text">Üretim Bildirme Ekranları</span>
                                </div>
                                <i class="fa-solid fa-chevron-right arrow-icon"></i>
                            </a>

                            <ul>
                                <li>
                                    <a asp-controller="Uretim" asp-action="UretimBildirimi1" target="_blank" title="Üretim Bildirme Ekranı - 1">
                                        <div class="link-content">
                                            <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                            <span class="link-text">Üretim Bildirme Ekranı - 1</span>
                                        </div>
                                    </a>
                                </li>

                              
                            </ul>
                        </li>
                    </ul>
                </li>


            </ul>
        </div>

        <!-- GLOBAL TOAST MESSAGE -->
        <div id="globalToast" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 99999;">
            <div id="globalToastItem" class="toast align-items-center text-white border-0" role="alert">
                <div class="d-flex">
                    <div id="globalToastMessage" class="toast-body"></div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>


        <div id="page-content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script src="https://uicdn.toast.com/tui.code-snippet/latest/tui-code-snippet.js"></script>
    <script src="https://uicdn.toast.com/tui.pagination/latest/tui-pagination.js"></script>
    <script src="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.js"></script>
    <script src="https://uicdn.toast.com/grid/latest/tui-grid.js"></script>
    <script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>

    <script src="~/js/erp_bilesenleri.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>