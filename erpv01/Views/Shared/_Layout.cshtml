<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trinex ERP</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="https://uicdn.toast.com/grid/latest/tui-grid.css" />
    <link rel="stylesheet" href="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.css" />
    <link rel="stylesheet" href="https://uicdn.toast.com/tui.pagination/latest/tui-pagination.css" />
    <link rel="stylesheet" href="https://uicdn.toast.com/editor/latest/toastui-editor.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/erp_bilesenleri.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-custom">
        <div class="d-flex align-items-center">
            <button class="btn btn-light border-0 me-3" id="sidebarToggle" style="color: #555;">
                <i class="fa-solid fa-bars fa-lg"></i>
            </button>

            <a class="navbar-brand-group" href="/">
                <img src="~/images/logo.png" onerror="this.style.display='none'" alt="Logo" class="navbar-logo">
                <span class="brand-badge">TRINEX ERP</span>
            </a>
        </div>

        <div class="ms-auto">
            <div class="d-flex align-items-center gap-2 text-dark">
                <div class="d-none d-sm-block text-end" style="line-height: 1.2;">
                    <small class="text-muted d-block" style="font-size: 0.7rem; font-weight:600;">HOŞGELDİNİZ</small>
                    <!-- DİNAMİK KULLANICI ADI -->
                    <span style="font-weight: 600; font-size: 0.9rem;">
                        @(User.FindFirst("DisplayName")?.Value ?? User.Identity.Name)
                    </span>
                </div>
                <div style="background: #e7f1ff; padding: 8px; border-radius: 50%; color: #0d6efd;">
                    <i class="fa-solid fa-user"></i>
                </div>
                <!-- Çıkış Yap Butonu -->
                <a href="/Account/Logout" class="btn btn-sm btn-outline-danger ms-2" title="Çıkış Yap">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </div>
        </div>
    </nav>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-search-wrapper">
                <input type="text" id="menuSearchInput" class="sidebar-search-input" placeholder="Menüde ara...">
            </div>

            <ul class="sidebar-nav">

                @* HERKESİN GÖRECEĞİ ORTAK MENÜ *@
                <li>
                    <a asp-controller="Home" asp-action="Index" title="Anasayfa">
                        <div class="link-content">
                            <i class="fa-solid fa-gauge-high level-1-icon"></i>
                            <span class="link-text">Anasayfa</span>
                        </div>
                    </a>
                </li>

                @* SADECE ADMIN GÖRSÜN *@
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a href="#" class="has-submenu" title="Stok Yönetimi">
                            <div class="link-content">
                                <i class="fa-solid fa-boxes-stacked level-1-icon"></i>
                                <span class="link-text">Stok</span>
                            </div>
                            <i class="fa-solid fa-chevron-right arrow-icon"></i>
                        </a>
                        <ul>
                            <li>
                                <a asp-controller="Stok" asp-action="Liste1" target="_blank">
                                    <div class="link-content">
                                        <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                        <span class="link-text">Stok Kartları Listesi</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#" class="has-submenu" title="Satış Yönetimi">
                            <div class="link-content">
                                <i class="fa-solid fa-basket-shopping level-1-icon"></i>
                                <span class="link-text">Satış</span>
                            </div>
                            <i class="fa-solid fa-chevron-right arrow-icon"></i>
                        </a>
                        <ul>
                            <li>
                                <a asp-controller="Satis" asp-action="Liste2" target="_blank">
                                    <div class="link-content">
                                        <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                        <span class="link-text">Satış Siparişleri Kalemleri</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#" class="has-submenu" title="Üretim Yönetimi">
                            <div class="link-content">
                                <i class="fa-solid fa-industry level-1-icon"></i>
                                <span class="link-text">Üretim Yönetimi</span>
                            </div>
                            <i class="fa-solid fa-chevron-right arrow-icon"></i>
                        </a>
                        <ul>
                            <li>
                                <a asp-controller="Uretim" asp-action="Liste1" target="_blank">
                                    <div class="link-content">
                                        <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                        <span class="link-text">İş Emirleri Listesi</span>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="UretimFisi" asp-action="Liste1" target="_blank">
                                    <div class="link-content">
                                        <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                        <span class="link-text">Üretim Fişleri Listesi</span>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="SureKayitlari" asp-action="Liste1" target="_blank">
                                    <div class="link-content">
                                        <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                        <span class="link-text">Süre Kayıtları Listesi</span>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Uretim" asp-action="UretimBildirimi1" target="_blank">
                                    <div class="link-content">
                                        <span class="sub-level-icon"><i class="fa-solid fa-square"></i></span>
                                        <span class="link-text">Üretim Bildirme Ekranı - 1</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @* SADECE OPERATOR GÖRSÜN (veya Admin de görsün istersen || User.IsInRole("Admin") ekle) *@
                @if (User.IsInRole("Operator"))
                {
                    <li>
                        <a asp-controller="Uretim" asp-action="UretimBildirimi1" target="_blank" title="Üretim Bildirme Ekranı - 1">
                            <div class="link-content">
                                <i class="fa-solid fa-industry level-1-icon"></i>
                                <span class="link-text">Üretim Bildirme Ekranı</span>
                            </div>
                        </a>
                    </li>
                }

            </ul>
        </div>

        <!-- GLOBAL TOAST MESSAGE -->
        <div id="globalToast" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 99999;">
            <div id="globalToastItem" class="toast align-items-center text-white border-0" role="alert">
                <div class="d-flex">
                    <div id="globalToastMessage" class="toast-body"></div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>


        <div id="page-content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script src="https://uicdn.toast.com/tui.code-snippet/latest/tui-code-snippet.js"></script>
    <script src="https://uicdn.toast.com/tui.pagination/latest/tui-pagination.js"></script>
    <script src="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.js"></script>
    <script src="https://uicdn.toast.com/grid/latest/tui-grid.js"></script>
    <script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>

    <script src="~/js/erp_bilesenleri.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/TRINEX.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>